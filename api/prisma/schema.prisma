// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  ci       Int    @unique
  lastname String
  email    String @unique
  password String
}

model Permission {
  id          Int      @id @default(autoincrement())
  date        DateTime
  quantity    Int
  amount      Float
  civ         Int
  observation String
  receiptNo   String
  status      String

  ownerId        Int          @unique
  constructionId Int          @unique
  owner          Owner        @relation(fields: [ownerId], references: [id])
  construction   Construction @relation(fields: [constructionId], references: [id])
}

model Construction {
  id       Int    @id @default(autoincrement())
  address  String
  type     String
  floorsNo Int
  manager  String
  engineer String
  company  String

  areaId     Int         @unique
  area       Area        @relation(fields: [areaId], references: [id])
  amountId   Int         @unique
  amount     Amount      @relation(fields: [amountId], references: [id])
  Permission Permission?
}

model Area {
  id               Int           @id @default(autoincrement())
  landArea         String
  constructionArea String
  Construction     Construction?
}

model Amount {
  id           Int           @id @default(autoincrement())
  landAmount   Float
  workAmount   Float
  tax          Float
  Construction Construction?
}

model Owner {
  id         Int          @id @default(autoincrement())
  ci         Int          @unique
  name       String
  address    String
  permission Permission[]
}
